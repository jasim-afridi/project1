<section class="login">
  <div class="container">
   
    <div class="row">
      <div class="col-md-4  mx-auto">
      <div class="login_form bg-light px-3 py-4 rounded">
        <div class="close_model">
          <a class="close_model_trigger">
            <i class="fa fa-times"></i>
          </a>
        </div>
        <h4 class="mt-3 text-center">Login Form</h4>
        <form action="/login" method="POST">
          <div class="form-group form_group ">
            <label class="">Email</label>
            <input type="email" class="form-control" name="email" 
            placeholder="enter email"
            autocomplete="off"
            />
           
          </div>
          <div class="form-group form_group">
            <label class="">password</label>
            <input type="password" class="form-control" name="password" 
            placeholder="enter password"
            autocomplete="off"
            id="password"
            />
            <a class="eye">
              <i class="fa fa-eye"></i>
            </a>
            <a href="#" class="mt-2 forget_btn">Forgettin password ?</a>
          </div>
          <div class="submit">
            <button type="submit" class="d-block w-100 rounded">Login</button>
         <p class="mt-3 text-center"> Not a member <a href="/register" class="signup">SignUp</a></p>
         
          </div>
        </form>
      </div>
      </div>
    </div>
  </div>
</section>